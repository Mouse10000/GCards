@model mvcGCards.Models.UserCardModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Card</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Card.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Card.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Card.DateOfAdd)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(@Model.Card.DateOfAdd.Date.ToShortDateString())
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Card.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Card.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Card.Rank)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Card.Rank)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Card.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Card.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Count)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Card.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw("<img style='width:100%;' src=\"data:image/jpeg;base64,"
                     + Convert.ToBase64String(@Model.Card.Image) + "\" />")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-route-userName="@UserManager.GetUserName(User)">Back to List</a>
</div>

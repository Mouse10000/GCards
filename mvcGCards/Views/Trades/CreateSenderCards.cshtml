@model mvcGCards.Models.TradeSenderView

@{
    ViewData["Title"] = "Trade";
}

<h1>Trade stage 3</h1>

<h4>select your cards for trade</h4>


<div class="row">
    <div>

        <form asp-action="CreateSenderCards">

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TradeCards[0].IsChecked)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TradeCards[0].Card.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TradeCards[0].Card.Number)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TradeCards[0].Card.Image)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.TradeCards.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.CheckBoxFor(c => Model.TradeCards[i].IsChecked)
                                @Html.HiddenFor(c => Model.TradeCards[i].Card.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.TradeCards[i].Card.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.TradeCards[i].Card.Number)
                            </td>
                            <td>
                                @Html.Raw("<img style='width:60px; height:80px;' src=\"data:image/jpeg;base64,"
                                         + Convert.ToBase64String(Model.TradeCards[i].Card.Image) + "\" />")
                            </td>
                        </tr>
                    }
                </tbody>
                @Html.HiddenFor(c => Model.TradeId)
            </table>
            <br />
            <div class="form-group">
                <input type="submit" value="Next stage" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
